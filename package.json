{
  "name": "versa-js",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@9.15.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build-clean": "turbo build --no-cache",
    "dev": "turbo dev --no-cache",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo lint",
    "preinstall": "npx only-allow pnpm",
    "prepublishOnly": "pnpm build-clean",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "test": "turbo test",
    "valjean": "tsx scripts/valjean.ts packages/examples/receipts",
    "publish-packages": "turbo run build lint test --no-cache && changeset version && changeset publish"
  },
  "author": "thomasmost",
  "license": "ISC",
  "engines": {
    "pnpm": ">=9.0.0",
    "node": ">=14.0.0"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,md,yml,json,html}": "prettier --write"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.38.0",
    "@types/react": "^18.3.26",
    "@typescript-eslint/parser": "^8.46.2",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "eslint": "^9.38.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "5.1.0-rc-fb9a90fa48-20240614",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^12.5.0",
    "nodemon": "^3.1.10",
    "prettier": "^2.8.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ts-node": "^10.9.2",
    "tsconfig": "workspace:*",
    "tsx": "^4.20.6",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  },
  "pnpm": {
    "overrides": {
      "cross-spawn": ">=7.0.5",
      "micromatch": ">=4.0.8"
    }
  }
}
